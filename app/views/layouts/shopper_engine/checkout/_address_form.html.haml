= form_for address, url: {action: :update}, method: :put do |f|
  .form-group
    = f.label :address
    = f.text_field :address, class: 'form-control'
  .form-group
    = f.label :zipcode
    = f.text_field :zipcode, class: 'form-control'
  .form-group
    = f.label :city
    = f.text_field :city, class: 'form-control'
  .form-group
    = f.label :phone
    = f.text_field :phone, class: 'form-control'
  .form-group
    = f.label :country
    = f.collection_select(:country_id, Country.all, :id, :name, {}, {class: 'form-control'})
  .form-group
    = f.submit @address_editable ? "Update" : "Save", class: 'btn btn-primary'
